<!DOCTYPE html>
<html>
<head>
  <title>Momtivator</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag params[:controller] %>
  <%= stylesheet_link_tag "http://www.jqueryscript.net/css/jquerysctipttop.css" %>
  <%= javascript_include_tag 'application', 'pusher', 'reminder', 'notify.min', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= controller_name %> <%= action_name %>">
  <% if notice %>
    <div id="flash-message" class="alert message flash-notice"><%= notice %></div>
  <% end %>
  <% if flash.alert %>
    <div id="flash-message" class="alert message flash-alert"><%= flash.alert %></div>
  <%   flash.discard(:alert)
     end %>
  <%= render 'menubar' %>
  <div id="main-container" class="container">
    <%= yield %>
  </div>
</body>
</html>

<script type="text/javascript">
  window.PUSHER_API_KEY = "<%= Pusher.key %>"
  window.PRIVATE_CHANNEL = "<%= current_user ? 'private-'+current_user.id.to_s : '' %>"
</script>